<div class="container">
    <h1>{{title}}</h1>

    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link" href="/add-order">Add Order</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/orders">View Orders</a>
        </li>
    </ul>

    <br/>

    <div class="row">
        <div class="col-md-8">
            <form>
                <div class="form-group row">
                    <label for="order-search" class="col-sm-2 col-form-label">Search</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" id="search-orders" 
                            placeholder="Enter phone, or address or name or comments">
                    </div>
                </div>

                <div class="form-group row">
                    <table class="table table-striped table-bordered table-hover table-condensed" id="orders">
                        <thead class="thead-light">
                            <th>Name</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Price</th>
                            <th>Details</th>

                        </thead>
                    </table>
                </div>

            </form>
        </div>
    </div>

</div>            

<script src="javascripts/orders.js"></script>
