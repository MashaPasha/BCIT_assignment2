<div class="container">
    <h1>{{title}}</h1>

    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" href="/add-order" >Add Order</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/orders">View Orders</a>
        </li>
    </ul>

    <br/>

    <div class="row">
        <div class="col-md-8">
            <form id="submitForm">                
                <div class="form-group row">
                    <label for="pizza-size" class="col-sm-2 col-form-label">Size</label>
                    <div class="col-sm-10 radio">
                        {{#each size}}
                            <label class="mb-0 mr-3">
                                <input type="radio" name="size" value="{{id}}" required 
                                    {{#if @first}} checked="checked" {{/if}}>{{name}} - {{price}}$
                            </label>
                        {{/each}}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="pizza-crust" class=" col-sm-2 col-form-label" >Crust</label>
                    <div class="col-sm-10 radio">
                        {{#each crust}}
                            <label class="mb-0 mr-3"><input type="radio" name="crust" value="{{id}}" required 
                                    {{#if @first}} checked="checked" {{/if}}>{{name}}</label>
                        {{/each}}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="pizza-toppings" class="col-sm-2 col-form-label">Toppings</label>
                    <div class="col-sm-10 checkbox">
                        {{#each toppings}}
                            <label class="mb-0 mr-3"><input type="checkbox" name="toppings" value="{{id}}">{{name}} - {{price}}$</label>
                        {{/each}}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="quantity" class="col-sm-2 col-form-label">Quantity</label>
                    <div class="col-sm-10">
                        <input id="quantity" class="form-control" type="number" name="quantity" value="1"  min="1" max="10" required></input>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input id="name" class="form-control" type="text" name="name" required></input>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="phone" class="col-sm-2 col-form-label">Phone</label>
                    <div class="col-sm-10">
                        <input id="phone" class="form-control" type="text" name="phone" pattern="[0-9]{3}-?[0-9]{3}-?[0-9]{4}" 
                            required placeholder="Format 123-456-7890"></input>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="address" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                        <input id="address" class="form-control" type="text" name="address" required></input>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-3">
                        <button class="btn btn-success">Add Order</button>
                    </div>

                    <div class="col-sm-7">
                        <button class="btn btn-secondary" onClick="window.location.reload()">Cancel</button>
                    </div>
                </div>

                <div class="form-group margin-bottom-10"></div>
                <div id="statusMsg">
            </form>
        </div>
    </div>

</div>

<script src="javascripts/add-order.js"></script>
